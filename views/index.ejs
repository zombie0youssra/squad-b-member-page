<%- include('./partials/head') %>

  <header>
    <img class="logo" src="/<%=squad.slug%>.png" alt="squad B logo">
</header>

  
  
  <main>

    <nav>
      <ul>
        <li><a href="/?squad=squad-a-2022">Squad A</a></li>
        <li><a href="/?squad=squad-b-2022">Squad B</a></li>
        <li><a href="/?squad=squat-c-2022">Squad C</a></li>
        <!-- <li><a href="/?squad=<%= squad.slug %>&orderBy=name">Sorteer op naam</a></li> -->
    
    </nav>

    <section class="marquee">
      <p>
        <span>
          <strong>new 2023 collection</strong> — FDND edition — <strong>frontenders</strong> — ON SALE —
        </span>
        <span aria-hidden>
          <span>
            <strong>new 2023 collection</strong> — FDND edition — <strong>frontenders</strong> — ON SALE —
          </span>
          <span aria-hidden>
            <span>
              <strong>new 2023 collection</strong> — FDND edition — <strong>frontenders</strong> — ON SALE —
            </span>
            <span aria-hidden>
              <span>
                <strong>new 2023 collection</strong> — FDND edition — <strong>frontenders</strong> — ON SALE —
              </span>
      
      </p>
    </section>



    <section class="shoe-box">
      <img class="shoe" src="./orange shoe with shadow.png" alt="orange jordan high top sneaker">
      <img class="shoe-2" src="./orange shoe with shadow.png" alt="orange jordan high top sneaker">
      <img class="shoe-3" src="./orange shoe with shadow.png" alt="orange jordan high top sneaker">
    </section>

    <section class="button-container">
      <button><a href="/?squad=<%= squad.slug %>&orderBy=surname">Sort by surname </a><i class="fa-solid fa-user"></i></button>
      <button><a href="/?squad=<%= squad.slug %>&orderBy=nickname">Sort by colour </a><i class="fa-solid fa-paint-roller"></i></button>
      <button><a href="/?squad=<%= squad.slug %>&orderBy=name"> random </a><i class="fa-solid fa-shuffle"></i></button>
    </section>

    <!-- members -->
    <section class="card-container">
      <!-- de for each loop zorgt ervoor dat elke element die is gekozen (member) wordt geloopt waardoor je maar 1 keer moet schrijven wat ermoet gebeuren -->
      <% squad.members.forEach(member=> { %>
        <div class="member-card">
          <!-- ik heb een if else statement gebruikt die ervoor zorgt dat als er geen member.avatar is voor de meber het een placeholder gebruikt -->
          <% if (member.avatar) { %> 
            <img src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
          <% } else { %>
            <img src="/placeholder.jfif" alt="Placeholder avatar" />
          <% } %>
          <p>
            <%= member.name +" "+ member.surname %>
          </p>
          <p class="icon-container">
          <a class="member-icon" href="<%=member.website%>"><i class="fa-brands fa-github"></i></a>
          <a class="member-icon" href="https://twitter.com/youssra_exe"><i class="fa-brands fa-twitter"></i></a>
          <a class="member-icon" href="/?squad=squat-c-2022"><i class="fa-solid fa-comment"></i></a>
          </p>
        </div>
        
      
       <% }) %>
      </section>


    <section class="container-form">
      <img class="quote-img" src="./dark-mode-quote.png">
      <img class="quote-shoe" src="./quote-shoe.png">
      <div class="form"></div>
    </section>
  
  
  
  
  </main>


<%- include('./partials/foot') %>
